{{#each this}}
<li class="gallery-item">
    <div class="photo-card">
        <img class="gallery-item-img" src="{{webformatURL}}" alt="{{tags}}" data-source = "{{largeImageURL}}" />

        <div class="stats">
            <p class="stats-item">
                <i class="material-icons">thumb_up</i>
                <i class="material-icons-text">{{likes }}</i>
            </p>
            <p class="stats-item">
                <i class="material-icons">visibility</i>
                <i class="material-icons-text">{{views }}</i>
            </p>
            <p class="stats-item">
                <i class="material-icons">comment</i>
                <i class="material-icons-text">{{comments }}</i>
            </p>
            <p class="stats-item">
                <i class="material-icons">cloud_download</i>
                <i class="material-icons-text">{{downloads }}</i>
            </p>
        </div>
    </div>
</li>
{{/each}}